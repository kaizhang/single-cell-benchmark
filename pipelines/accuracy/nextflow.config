singularity.enabled = true
singularity.autoMounts = true
singularity.runOptions = "-e -H /projects/ps-renlab/kai/dev/benchmark"

report.overwrite = true

profiles {
  glean {
    executor {
      name='pbs'
      queueSize=50
    }
    process {
      executor = 'pbs'
      clusterOptions = "-q glean -l walltime=8:00:00"

      withLabel: gpu {
        clusterOptions = "-q glean -l walltime=8:00:00 -l nodes=1:ppn=4:gpu3090"
      }
    }
  }

  home {
    executor {
      name='pbs'
      queueSize=50
    }
    process {
      executor = 'pbs'
      clusterOptions = "-q home-yeo -l walltime=24:00:00"

      withLabel: gpu {
        clusterOptions = "-q gpu-hotel -l walltime=24:00:00 -l nodes=1:ppn=4:gpu3090"
      }
    }
  }
}
